<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Data Jadwal Pelajaran</title>

    <style>
      .css-serial {
  counter-reset: serial-number;  /* Atur penomoran ke 0 */
}
.css-serial td:first-child:before {
  counter-increment: serial-number;  /* Kenaikan penomoran */
  content: counter(serial-number);  /* Tampilan counter */
}
.tambah-user{
  text-decoration: none;
font-size: 30px;
}
.tambah-user:hover{
 color: aquamarine;
}
</style>
    </style>
  </head>
  <body>
    <h3>Data Jadwal Pelajaran</h3>
    <table border="1" class="css-serial">
      <thead>
        <tr>
          <th>No</th>
          <th>Kode Mata Pelajaran</th>
          <th>Nama Mata Pelajaran</th>
          <th>Tanggal Mata Pelajaran</th>
          <th>Nama Guru </th>
        </tr>
      </thead>
      <tbody>
        <% jadwalPelajaran.forEach((user) => { %>
        <tr>
          <td></td>
          <td><%= user.kodeMatpel %></td>
          <td><%= user.namaMatpel %></td>
          <td><%= user.tanggalMatpel %></td>
          <td><%= user.namaGuru %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <p></p>
    <a href="/register-matpel" class="tambah-user">Tambah User</a>
  </body>
</html>